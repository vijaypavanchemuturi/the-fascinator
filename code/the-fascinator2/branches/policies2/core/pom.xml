<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>au.edu.usq.fascinator</groupId>
  <artifactId>fascinator-core</artifactId>
  <version>0.2.0-SNAPSHOT</version>
  <name>The Fascinator - Core</name>
  <parent>
    <groupId>au.edu.usq.fascinator</groupId>
    <artifactId>the-fascinator</artifactId>
    <version>0.2.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <dependencies>
    <dependency>
      <groupId>au.edu.usq.fascinator</groupId>
      <artifactId>fascinator-common</artifactId>
    </dependency>
    <dependency>
      <groupId>au.edu.usq.fascinator</groupId>
      <artifactId>fascinator-plugin-api</artifactId>
    </dependency>
    <dependency>
      <groupId>dom4j</groupId>
      <artifactId>dom4j</artifactId>
    </dependency>
    <dependency>
      <groupId>jaxen</groupId>
      <artifactId>jaxen</artifactId>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>jaxen</groupId>
      <artifactId>jaxen</artifactId>
    </dependency>
  </dependencies>
  <profiles>
    <profile>
      <id>policies</id>
      <dependencies>
        <dependency>
          <groupId>au.edu.usq.fascinator.plugins</groupId>
          <artifactId>plugin-storage-filesystem</artifactId>
        </dependency>
        <dependency>
          <groupId>au.edu.usq.fascinator.plugins</groupId>
          <artifactId>plugin-harvester-filesystem</artifactId>
        </dependency>
        <dependency>
          <groupId>au.edu.usq.fascinator.plugins</groupId>
          <artifactId>plugin-indexer-solr</artifactId>
        </dependency>
        <!--
        <dependency>
          <groupId>au.edu.usq.fascinator.plugins</groupId>
          <artifactId>plugin-transformer-aperture</artifactId>
        </dependency>
        -->
        <dependency>
          <groupId>au.edu.usq.fascinator.plugins</groupId>
          <artifactId>plugin-transformer-ice2</artifactId>
        </dependency>
      </dependencies>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-shade-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <transformers>
                    <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                      <mainClass>au.edu.usq.fascinator.HarvestClient</mainClass>
                    </transformer>
                  </transformers>
                  <excludes>
                    <exclude>net.sf.jacob-project:jacob</exclude>
                  </excludes>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>jsonq-test</id>
      <dependencies>
        <dependency>
          <groupId>au.edu.usq.fascinator.plugins</groupId>
          <artifactId>plugin-storage-filesystem</artifactId>
        </dependency>
        <dependency>
          <groupId>au.edu.usq.fascinator.plugins</groupId>
          <artifactId>plugin-harvester-jsonq</artifactId>
        </dependency>
        <dependency>
          <groupId>au.edu.usq.fascinator.plugins</groupId>
          <artifactId>plugin-indexer-solr</artifactId>
        </dependency>
        <dependency>
          <groupId>au.edu.usq.fascinator.plugins</groupId>
          <artifactId>plugin-transformer-aperture</artifactId>
        </dependency>
        <dependency>
          <groupId>au.edu.usq.fascinator.plugins</groupId>
          <artifactId>plugin-transformer-ice2</artifactId>
        </dependency>
      </dependencies>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.1.1</version>
            <configuration>
              <mainClass>au.edu.usq.fascinator.HarvestClient</mainClass>
              <arguments>
                <argument>src/test/resources/json-queue.json</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>oai-pmh-test</id>
