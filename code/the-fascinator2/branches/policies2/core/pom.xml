              <mainClass>au.edu.usq.fascinator.HarvestClient</mainClass>
              <arguments>
                <argument>src/test/resources/usq.json</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>filesystem-test</id>
