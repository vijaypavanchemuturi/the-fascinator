<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>fascinator-plugins</artifactId>
		<groupId>au.edu.usq.fascinator</groupId>
		<version>0.2.0-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>au.edu.usq.fascinator.plugins</groupId>
	<artifactId>plugin-harvester-feed</artifactId>
	<name>RSS/ATOM Feed Harvester</name>
	<version>0.2.0-SNAPSHOT</version>
	<properties>
		<fascinator-version>0.2.0-SNAPSHOT</fascinator-version>
		<feed-reader-version>0.0.1-SNAPSHOT</feed-reader-version>
		<compileSource>1.5</compileSource>
	</properties>

	<dependencies>
		<dependency>
			<groupId>au.edu.usq.fascinator</groupId>
			<artifactId>fascinator-common</artifactId>
			<version>${fascinator-version}</version>
		</dependency>
		<dependency>
			<groupId>au.edu.usq.fascinator</groupId>
			<artifactId>fascinator-core</artifactId>
			<version>${fascinator-version}</version>
		</dependency>
		<dependency>
			<groupId>au.edu.usq.fascinator</groupId>
			<artifactId>fascinator-plugin-api</artifactId>
			<version>${fascinator-version}</version>
		</dependency>
		<dependency>
			<groupId>au.edu.usq.fascinator.plugins</groupId>
			<artifactId>plugin-storage-filesystem</artifactId>
			<version>${fascinator-version}</version>
		</dependency>
		<dependency>
			<groupId>au.edu.usq.fascinator.plugins</groupId>
			<artifactId>plugin-indexer-solr</artifactId>
			<version>${fascinator-version}</version>
		</dependency>
		<dependency>
			<groupId>au.edu.usq.fascinator.contrib</groupId>
			<artifactId>feed-reader</artifactId>
			<version>${feed-reader-version}</version>
		</dependency>
		<dependency>
          <groupId>au.edu.usq.fascinator.plugins</groupId>
          <artifactId>plugin-harvester-oai-pmh</artifactId>
          <version>${fascinator-version}</version>
        </dependency>
	</dependencies>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>${compileSource}</source>
						<target>${compileSource}</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-javadoc-plugin</artifactId>
					<version>2.5</version>
					<configuration>
						<aggregate>true</aggregate>
						<links>
							<link>http://java.sun.com/javase/6/docs/api</link>
						</links>
					</configuration>
					<dependencies>
					</dependencies>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.1.1</version>
				<configuration>
					<mainClass>au.edu.usq.fascinator.harvester.feed.FeedHarvester
					</mainClass>
					<arguments>
						<argument>src/test/resources/properties.json</argument>
					</arguments>	
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>au.edu.usq.fascinator.harvester.feed.FeedHarvester
							</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>

	</build>

</project>